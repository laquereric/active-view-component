<meta charset="<%= @component.props.styles.charset %>">
<meta name="viewport" content="<%= @component.props.styles.viewport %>">

<meta name="description" content="<%= @component.props.base_props.description %>">
<meta name="keywords" content="<%= @component.props.base_props.keywords %>">
<meta name="author" content="<%= @component.props.base_props.author %>">

<meta name="robots" content="<%= @base_props.robots %>">

<meta property="og:title" content="<%= @base_props.og_title %>">
<meta property="og:description" content="<%= @base_props.og_description %>">
<meta property="og:image" content="<%= @base_props.og_image %>">
<meta property="og:url" content="<%= @base_props.og_url %>">

<meta name="twitter:card" content="<%= @base_props.twitter_card %>">

<% @base_props.custom_meta.each do |name, content| %>
  <meta name="<%= name %>" content="<%= content %>">
<% end %> 

